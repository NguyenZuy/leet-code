{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build all",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}\\main.cpp",
                "${workspaceFolder}\\src\\list_node.cpp",
                "-I",
                "${workspaceFolder}\\include",
                "-o",
                "${fileDirname}\\main.exe"
